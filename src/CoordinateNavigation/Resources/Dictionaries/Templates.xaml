                                                     Height="30"
                                                     BorderBrush="{StaticResource BorderColor}"
                                                     BorderThickness="1" 
                                                     Padding="5" />
                        </StackPanel>

                        <!--Direction Input for Longitude-->
                        <StackPanel Margin="0, 0, 0, 5">
                            <TextBlock Text="East or West of the Prime Meridian"
                                       Style="{StaticResource InputPlaceholderStyle}" />
                            <ComboBox Style="{StaticResource ComboBoxStyle}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="East"/>
                                <ComboBoxItem Content="West"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

    <!-- template: DD to DMS -->
    <DataTemplate x:Key="dd2dms_template">
        <Grid DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContentControl}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="45*" />
            </Grid.ColumnDefinitions>

            <ContentControl DataContext="{Binding DecimalCoordinateViewModel}" Grid.Column="0" ContentTemplate="{StaticResource dd_template}" />
            <!--<ContentControl DataContext="{Binding}" Grid.Column="1" ContentTemplate="{StaticResource operations_template}" />-->
            <ContentControl DataContext="{Binding DmsCoordinateViewModel}" Grid.Column="2" ContentTemplate="{StaticResource dms_template}" IsEnabled="False" />

        </Grid>
    </DataTemplate>

    <!-- template: DMS to DD -->
    <DataTemplate x:Key="dms2dd_template">
        <Grid DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContentControl}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="45*" />
            </Grid.ColumnDefinitions>

            <ContentControl DataContext="{Binding DmsCoordinateViewModel}" Grid.Column="0" ContentTemplate="{StaticResource dms_template}" />
            <!--<ContentControl DataContext="{Binding}" Grid.Column="1" ContentTemplate="{StaticResource operations_template}" />-->
            <ContentControl DataContext="{Binding DecimalCoordinateViewModel}" Grid.Column="2" ContentTemplate="{StaticResource dd_template}" IsEnabled="False" />

        </Grid>
    </DataTemplate>

</ResourceDictionary>