<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:controls="clr-namespace:CoordinateNavigation.Controls.CustomControls">

    <!-- Reusable templates -->
    <DataTemplate x:Key="dd_template">
        <Border Style="{StaticResource TemplateBorderStyle}">
            <Grid DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContentControl}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Latitude Section -->
                <StackPanel Grid.Column="0">

                    <!--Title for Latitude-->
                    <DockPanel VerticalAlignment="Center" LastChildFill="False">
                        <TextBlock Text="Latitude in Degrees" 
                                   Style="{StaticResource CoordinateTitleStyle}"
                                   DockPanel.Dock="Left" />
                        <Button Style="{StaticResource InfoButtonStyle}"
                                DockPanel.Dock="Right">
                            <Button.ToolTip>
                                <ToolTip Style="{StaticResource ToolTipStyle}">
                                    Enter values from 0 to 90. The direction selection determines the hemisphere (e.g., 45° North). 
                                    Avoid using negative values, as the direction ComboBox will handle this.
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </DockPanel>

                    <!--Degrees Input for Latitude-->
                    <StackPanel Margin="0, 0, 0, 5">
                        <TextBlock Text="Input Latitude in Decimal Degrees"
                                   Style="{StaticResource InputPlaceholderStyle}" />
                        <controls:NumericControl Value="{Binding Latitude.Degrees, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 StringFormat="F0"
                                                 Height="30"
                                                 BorderBrush="{StaticResource BorderColor}"
                                                 BorderThickness="1" 
                                                 Padding="5" />
                    </StackPanel>

                    <!--Direction Input for Latitude-->
                    <StackPanel Margin="0, 0, 0, 5">
                        <TextBlock Text="North or South of the Equator"
                                   Style="{StaticResource InputPlaceholderStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="North" />
                            <ComboBoxItem Content="South" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Longitude Section -->
                <StackPanel Grid.Column="2">

                    <!--Title for Longitude-->
                    <DockPanel VerticalAlignment="Center" LastChildFill="False">
                        <TextBlock Text="Longitude in Degrees" 
                                   Style="{StaticResource CoordinateTitleStyle}" 
                                   DockPanel.Dock="Left" />
                        <Button Style="{StaticResource InfoButtonStyle}"
                                DockPanel.Dock="Right" >
                            <Button.ToolTip>
                                <ToolTip Style="{StaticResource ToolTipStyle}">
                                    Enter values from 0 to 180. Use the direction ComboBox to choose "East" or "West" (e.g., 120° West). 
                                    As with latitude, input values are non-negative.
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </DockPanel>

                    <!--Degrees Input for Latitude-->
                    <StackPanel Margin="0, 0, 0, 5">
                        <TextBlock Text="Input Longitude in Decimal Degrees"
                                   Style="{StaticResource InputPlaceholderStyle}" />
                        <controls:NumericControl Value="{Binding Longitude.Degrees, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 StringFormat="F0"
                                                 Height="30"
                                                 BorderBrush="{StaticResource BorderColor}"
                                                 BorderThickness="1"
                                                 Padding="5" />
                    </StackPanel>

                    <!--Direction Input for Longitude-->
                    <StackPanel Margin="0, 0, 0, 5">
                        <TextBlock Text="East or West of the Prime Meridian"
                                   Style="{StaticResource InputPlaceholderStyle}" />
                        <ComboBox Style="{StaticResource ComboBoxStyle}"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="East"/>
                            <ComboBoxItem Content="West"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>

